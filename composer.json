{
    "name": "gui-don/rico-library",
    "type": "library",
    "description": "Rico project library - PHP libraries",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "pheromone/phpcs-security-audit": "^2.0",
        "phpunit/phpunit": "^7",
        "phpstan/phpstan": "^0.12.0",

        "doctrine/lexer": "1.0.*",
        "symfony/console": "^4",
        "symfony/options-resolver": "^4",
        "symfony/event-dispatcher": "^4",
        "symfony/finder": "^4",
        "symfony/process": "^4",
        "symfony/stopwatch": "^4",
        "symfony/service-contracts": "^1",
        "symfony/filesystem": "^4",
        "phpdocumentor/reflection-docblock":  "^4",
        "phpdocumentor/type-resolver": "^1"
    },
    "autoload": {
        "psr-4": {
            "Rico\\": "src/",
            "Rico\\Test\\": "tests/"
        }
    }
}
